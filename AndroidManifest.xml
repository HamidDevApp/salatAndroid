<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.skanderjabouzi.salat"
      android:versionCode="1"
      android:versionName="1.0">
    <uses-sdk android:minSdkVersion="4" />

    <application android:icon="@drawable/makka_icon" android:label="@string/app_name" android:name=".SalatApplication">
                          
        <activity android:name=".SalatActivity"
                  android:label="@string/app_name"
                  android:screenOrientation="nosensor">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
    <activity android:name=".CalculationActivity" android:label="@string/titleCalculation" />   
    
    <service android:name=".SalatService" />     
    
    <receiver android:name=".SalatBootReceiver">
      <intent-filter>
        <action android:name="android.intent.action.BOOT_COMPLETED" />
      </intent-filter>
    </receiver>

    <uses-permission android:name="android.permission.VIBRATE" /> 
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    
    </application>
</manifest>
